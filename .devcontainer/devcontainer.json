{
  "name": "yocto",
  "image": "crops/poky:fedora-40",
  "mounts": [
    "source=${localWorkspaceFolder}/work,target=/workdir,type=bind,consistency=cached",
    "source=/mnt/yocto/sstate,target=/sstate,type=bind,consistency=cached",
    "source=/mnt/yocto/cache,target=/cache,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/meta-butteros,target=/workdir/layers/meta-butteros,type=bind,consistency=cached"
  ],
  "workspaceFolder": "/workdir",
  "postCreateCommand": "python3 -m pip install --user --upgrade pip kas",
  "customizations": {
    "vscode": {
      "extensions": [
        "yocto-project.yocto-bitbake",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "bitbake.pathToBuildFolder": "${workspaceFolder}/build",
        "bitbake.pathToEnvScript": "${workspaceFolder}/layers/openembedded-core/oe-init-build-env",
        "bitbake.pathToBitbakeFolder": "${workspaceFolder}/layers/bitbake"
      }
    }
  }
}